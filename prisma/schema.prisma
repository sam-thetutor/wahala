generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Market {
  id          String   @id
  question    String
  endtime     String   @map("endtime")
  totalpool   String   @map("totalpool")
  totalyes    String   @map("totalyes")
  totalno     String   @map("totalno")
  status      Int
  outcome     Boolean
  createdat   String   @map("createdat")
  creator     String
  description String
  category    String
  image       String
  source      String
  updatedat   DateTime @updatedAt @map("updatedat")

  @@map("markets")
}

model MarketEvent {
  id          String   @id @default(cuid())
  marketId    String
  eventType   String   // 'MarketCreated', 'SharesBought', 'MarketResolved', etc.
  blockNumber String
  transactionHash String
  args        String   // JSON string of event arguments
  createdAt   DateTime @default(now())

  @@map("market_events")
}

model MarketParticipant {
  id          String   @id @default(cuid())
  marketId    String
  address     String
  totalYesShares String @default("0")
  totalNoShares  String @default("0")
  totalInvestment String @default("0")
  firstPurchaseAt DateTime @default(now())
  lastPurchaseAt  DateTime @default(now())
  transactionHashes String[] // Array of transaction hashes

  @@unique([marketId, address])
  @@map("market_participants")
}

model SyncStatus {
  id          String   @id @default(cuid())
  lastSyncBlock String
  lastSyncTime DateTime @default(now())
  isActive    Boolean  @default(true)

  @@map("sync_status")
}